









public class Mobile extends Gadget {
    private int credit; // minutes

    public Mobile(String model, double price, int weight, String size, int credit) {
        super(model, price, weight, size);
        this.credit = credit;
    }

    public int getCredit() {
        return credit;
    }

    public void addCredit(int amount) {
        if (amount > 0) {
            credit += amount;
            System.out.println("Credit added. New credit: " + credit + " minutes");
        } else {
            System.out.println("You must add a positive amount of credit.");
        }
    }

    public void makeCall(String phoneNumber, int duration) {
        if (duration <= 0) {
            System.out.println("Call duration must be greater than 0.");
            return;
        }

        if (credit >= duration) {
            System.out.println("Calling " + phoneNumber + " for " + duration + " minutes...");
            credit -= duration;
            System.out.println("Call ended. Remaining credit: " + credit + " minutes");
        } else {
            System.out.println("Insufficient credit to make this call.");
        }
    }

    @Override
    public void display() {
        super.display();
        System.out.println("Credit (minutes): " + credit);
    }
}
